<UserControl x:Class="StretchableTest.Controls.StretchableTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StretchableTest.Controls"
             mc:Ignorable="d" 
             Width="100"
             Height="50"
             MinWidth="100"
             MinHeight="50"
             Background="SkyBlue"
             Loaded="UserControl_Loaded">
    <Grid>
        <Rectangle Name="TopLeftAnchor" Fill="Black" Width="10" Height="10" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Rectangle Name="TopRightAnchor" Fill="Black" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Top" />
        <Rectangle Name="BottomRightAnchor" Fill="Black" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
        <Rectangle Name="BottomLeftAnchor" Fill="Black" Width="10" Height="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
    </Grid>
</UserControl>
